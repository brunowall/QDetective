<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufc.quixada.qdetective.views.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="126dp"
        android:layout_height="32dp"
        android:text="Categoria"
        android:textSize="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="125dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="348dp"
        android:layout_height="54dp"
        tools:layout_editor_absoluteX="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="172dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/categorySpinner" />

    <Button
        android:id="@+id/dataButton"
        android:layout_width="353dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="@+id/categorySpinner"
        app:layout_constraintRight_toRightOf="@+id/categorySpinner"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:onClick="dataButtonClicked"
        />

    <EditText
        android:id="@+id/description"
        android:layout_width="321dp"
        android:layout_height="102dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="23dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:maxLength="150"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="154dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dataButton" />

    <Button
        android:id="@+id/button3"
        android:layout_width="348dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:layout_editor_absoluteX="10dp"
        android:onClick="continueClick"
        />

</android.support.constraint.ConstraintLayout>
